@model User
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<br />
<br />
<div class="container">
    <div class="d-flex justify-content-center h-120">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Register</h3>
            </div>
            <div class="card-body">
                <form asp-action="Registration">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-form-label">
                        <input asp-for="Name" class="form-control" placeholder="FirstName">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-form-label">
                        <input asp-for="Surname" class="form-control" placeholder="SurName">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="col-form-label ">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-form-label">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-form-label" >
                        <input class="btn float-right login_btn" type="submit" id="btnregister" value="Register">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                   Do you have already an account? &ensp;<a a asp-controller="Login" asp-action="LoginPage"> Login</a>
                </div>
              
            </div>
        </div>
    </div>
</div>
<br />
<br />
